{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2022",
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "noEmit": false
    },
    "include": [
        "src/shared/**/*",
        "src/model/**/*",
        "src/view-model/**/*",
        "src/view/**/*",
        "src/test/**/*"
    ],
    "exclude": [
        "src/extension.ts",
        "src/view/webview/**/*",
        "node_modules"
    ]
}