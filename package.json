{
  "name": "antigravity-panel",
  "displayName": "Toolkit for Antigravity",
  "description": "%extension.description%",
  "version": "2.2.0",
  "publisher": "n2ns",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/n2ns/antigravity-panel.git"
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "l10n": "./l10n",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gagp-sidebar",
          "title": "%viewsContainers.gagp-sidebar.title%",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "gagp-sidebar": [
        {
          "type": "webview",
          "id": "gagp.sidebar",
          "name": "%views.gagp.sidebar.name%"
        }
      ]
    },
    "commands": [
      {
        "command": "gagp.openPanel",
        "title": "%command.openPanel.title%",
        "category": "%extension.category%"
      },
      {
        "command": "gagp.showCacheSize",
        "title": "%command.showCacheSize.title%",
        "category": "%extension.category%"
      },
      {
        "command": "gagp.cleanCache",
        "title": "%command.cleanCache.title%",
        "category": "%extension.category%",
        "icon": "$(trash)"
      },
      {
        "command": "gagp.refreshQuota",
        "title": "%command.refreshQuota.title%",
        "category": "%extension.category%",
        "icon": "$(refresh)"
      },
      {
        "command": "gagp.showDisclaimer",
        "title": "%command.showDisclaimer.title%",
        "category": "%extension.category%",
        "icon": "$(info)"
      },
      {
        "command": "gagp.openSettings",
        "title": "%command.openSettings.title%",
        "category": "%extension.category%",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gagp.refreshQuota",
          "when": "view == gagp.sidebar",
          "group": "navigation"
        },
        {
          "command": "gagp.showDisclaimer",
          "when": "view == gagp.sidebar",
          "group": "navigation"
        },
        {
          "command": "gagp.openSettings",
          "when": "view == gagp.sidebar",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "%config.statusBar.title%",
        "properties": {
          "gagp.statusBarShowQuota": {
            "type": "boolean",
            "default": true,
            "description": "%config.statusBarShowQuota.description%"
          },
          "gagp.statusBarShowCache": {
            "type": "boolean",
            "default": true,
            "description": "%config.statusBarShowCache.description%"
          },
          "gagp.statusBarStyle": {
            "type": "string",
            "default": "percentage",
            "enum": [
              "percentage",
              "resetTime",
              "used",
              "remaining"
            ],
            "enumDescriptions": [
              "%config.statusBarStyle.percentage%",
              "%config.statusBarStyle.resetTime%",
              "%config.statusBarStyle.used%",
              "%config.statusBarStyle.remaining%"
            ],
            "description": "%config.statusBarStyle.description%"
          },
          "gagp.statusBarThresholdWarning": {
            "type": "number",
            "default": 30,
            "minimum": 5,
            "maximum": 100,
            "description": "%config.statusBarThresholdWarning.description%"
          },
          "gagp.statusBarThresholdCritical": {
            "type": "number",
            "default": 10,
            "minimum": 1,
            "maximum": 50,
            "description": "%config.statusBarThresholdCritical.description%"
          }
        }
      },
      {
        "title": "%config.quota.title%",
        "properties": {
          "gagp.pollingInterval": {
            "type": "number",
            "default": 120,
            "minimum": 60,
            "description": "%config.pollingInterval.description%"
          },
          "gagp.quotaDisplayStyle": {
            "type": "string",
            "default": "semi-arc",
            "enum": [
              "semi-arc",
              "classic-donut"
            ],
            "enumDescriptions": [
              "%config.quotaDisplayStyle.semi-arc%",
              "%config.quotaDisplayStyle.classic-donut%"
            ],
            "description": "%config.quotaDisplayStyle.description%"
          },
          "gagp.visualizationMode": {
            "type": "string",
            "default": "groups",
            "enum": [
              "groups",
              "models"
            ],
            "enumDescriptions": [
              "%config.visualizationMode.groups%",
              "%config.visualizationMode.models%"
            ],
            "description": "%config.visualizationMode.description%"
          },
          "gagp.showGptQuota": {
            "type": "boolean",
            "default": false,
            "description": "%config.showGptQuota.description%"
          },
          "gagp.historyDisplayMinutes": {
            "type": "number",
            "default": 90,
            "minimum": 10,
            "maximum": 120,
            "description": "%config.historyDisplayMinutes.description%"
          }
        }
      },
      {
        "title": "%config.cache.title%",
        "properties": {
          "gagp.cacheCheckInterval": {
            "type": "number",
            "default": 120,
            "minimum": 30,
            "maximum": 600,
            "description": "%config.cacheCheckInterval.description%"
          },
          "gagp.cacheWarningThreshold": {
            "type": "number",
            "default": 500,
            "minimum": 100,
            "description": "%config.cacheWarningThreshold.description%"
          },
          "gagp.cacheHideEmptyFolders": {
            "type": "boolean",
            "default": false,
            "description": "%config.cacheHideEmptyFolders.description%"
          },
          "gagp.autoCleanCache": {
            "type": "boolean",
            "default": false,
            "description": "%config.autoCleanCache.description%"
          }
        }
      },
      {
        "title": "%config.advanced.title%",
        "properties": {
          "gagp.advancedQuotaApiPath": {
            "type": "string",
            "default": "/exa.language_server_pb.LanguageServerService/GetUserStatus",
            "description": "%config.advancedQuotaApiPath.description%"
          },
          "gagp.advancedServerHost": {
            "type": "string",
            "default": "127.0.0.1",
            "description": "%config.advancedServerHost.description%"
          }
        }
      },
      {
        "title": "%config.debug.title%",
        "properties": {
          "gagp.debugMode": {
            "type": "boolean",
            "default": false,
            "description": "%config.debugMode.description%"
          }
        }
      }
    ]
  },
  "scripts": {
    "build": "node ./esbuild.js",
    "watch": "node ./esbuild.js --watch --sourcemap",
    "vscode:prepublish": "npm run build",
    "lint": "eslint src --ext .ts",
    "test": "tsc -p tsconfig.test.json && node ./out/test/runUnitTests.js",
    "test:server": "tsc -p tsconfig.test.json && node ./out/test/runServerTests.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "canvas": "^3.2.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "lit": "^3.3.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --no-warn-ignored"
    ]
  }
}